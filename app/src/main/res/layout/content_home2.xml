<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".home2"
    tools:showIn="@layout/app_bar_home2">
<LinearLayout

    android:id="@+id/ln2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/stvv"
        android:hint="date"
        android:textColor="#000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="Welcome To Hijri Calendar"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:visibility="gone"
        android:layout_width="200dp"
        android:hint="day"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tvvv"
        android:textStyle="bold"
        android:textColor="#7D128F"
        android:textSize="26dp"
        />
</LinearLayout>

    <LinearLayout
android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ln"
        android:layout_height="wrap_content">



    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/stv"
        android:textColor="#000"
        android:textSize="20dp"

        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tvv"
        android:textStyle="bold"
        android:textColor="#7D128F"
        android:textSize="26dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/framelayout"></FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events :"
        android:textColor="#7D128F"
        android:textSize="26dp"
        android:textStyle="bold"/>
    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/lsv"></ListView>

    </LinearLayout>
   <LinearLayout
      android:visibility="gone"
       android:background="@drawable/h"
       android:layout_width="match_parent"
       android:id="@+id/namazlay"
       android:orientation="vertical"
       android:layout_height="wrap_content">

       <TextView
           android:textStyle="bold"
           android:textSize="40dp"
           android:layout_gravity="center"
           android:text="Namaz Timings"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <ListView

           android:id="@+id/list2"
           android:layout_marginTop="370dp"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"></ListView>




   </LinearLayout>

<LinearLayout
    android:id="@+id/ayyatlay"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
    android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>




</LinearLayout>